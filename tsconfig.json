{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["e2e/**/*"],
  "compilerOptions": {
    "target": "es2022",
    "jsx": "react-jsx",
    "module": "esnext",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable",
      // add global `WebWorker` and `ServiceWorker` types
      "webworker"
    ],
    "types": [
      "vite/client",
      // enable Serwist to properly type `virtual:serwist`
      "@serwist/vite/typings",
      // enable Bun types
      "bun"
    ],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
